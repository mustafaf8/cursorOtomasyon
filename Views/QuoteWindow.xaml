<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SolarAutomation.Views.QuoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistemler" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveCategoryButtonStyle" TargetType="Button" BasedOn="{StaticResource CategoryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentDarkColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Text="Sistemler" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"/>

        <!-- Ana İçerik -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Kategori Seçimi -->
                <StackPanel Grid.Column="0" Width="180" Margin="0,0,20,0">
                    <Button x:Name="btnUrunler"
                            Content="Ürünler" 
                            Style="{StaticResource CategoryButtonStyle}"
                            Click="Urunler_Click"/>
                    <Button x:Name="btnTarimsalSulama"
                            Content="Tarımsal Sulama" 
                            Style="{StaticResource ActiveCategoryButtonStyle}"
                            Click="TarimsalSulama_Click"/>
                    <Button x:Name="btnCati"
                            Content="Çatı" 
                            Style="{StaticResource CategoryButtonStyle}"
                            Click="Cati_Click"/>
                </StackPanel>

                <!-- Seçili Kategori İçeriği -->
                <Border Grid.Column="1" 
                        x:Name="contentGrid"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="5"/>
            </Grid>
        </ScrollViewer>

        <!-- Alt Butonlar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="20">
            <Button Content="Kaydet" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="Kaydet_Click"/>
            <Button Content="İptal" 
                    Width="100" 
                    Height="30"
                    Click="Iptal_Click"/>
        </StackPanel>
    </Grid>
</Window> 