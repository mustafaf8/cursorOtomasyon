<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SolarAutomation.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Müşteri Yönetimi" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Müşteri Bilgi Formu -->
        <GroupBox Header="Müşteri Bilgileri" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- İsim -->
                <Label Content="İsim:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0,0,10,5"/>

                <!-- Telefon -->
                <Label Content="Telefon:" Grid.Row="0" Grid.Column="2" Margin="0,0,10,5"/>
                <TextBox x:Name="txtPhone" Grid.Row="0" Grid.Column="3" Margin="0,0,0,5"/>

                <!-- Email -->
                <Label Content="Email:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="0,0,10,5"/>

                <!-- Adres -->
                <Label Content="Adres:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                <TextBox x:Name="txtAddress" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                         Height="50" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,5"/>

                <!-- Notlar -->
                <Label Content="Notlar:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"/>
                <TextBox x:Name="txtNotes" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                         Height="50" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Butonlar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button x:Name="btnSave" Content="Kaydet" Width="100" Height="30" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="İptal" Width="100" Height="30" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 