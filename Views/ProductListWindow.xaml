<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SolarAutomation.Views.ProductListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ürün Listesi" Height="600" Width="1200"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Arama ve Filtreleme -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Ara:" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSearch" Grid.Column="1" Height="25" 
                     TextChanged="TxtSearch_TextChanged" 
                     ToolTip="Ürün adı veya üretici ile arama yapın"/>

            <Label Content="Kategori:" Grid.Column="2" Margin="10,0,5,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbCategoryFilter" Grid.Column="3" Height="25"
                      SelectionChanged="CmbCategoryFilter_SelectionChanged">
                <ComboBoxItem Content="Tümü"/>
                <ComboBoxItem Content="Solar Panel"/>
                <ComboBoxItem Content="İnvertör"/>
                <ComboBoxItem Content="Akü"/>
                <ComboBoxItem Content="Kablo"/>
                <ComboBoxItem Content="Konstrüksiyon"/>
                <ComboBoxItem Content="Diğer"/>
            </ComboBox>

            <Button Content="Yeni Ürün" Grid.Column="5" Width="100" Height="25" 
                    Click="BtnNewProduct_Click"/>
        </Grid>

        <!-- Ürün Listesi -->
        <DataGrid x:Name="dgProducts" Grid.Row="1" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" 
                  MouseDoubleClick="DgProducts_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ürün Adı" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Fiyat" Binding="{Binding Price, StringFormat={}{0:N2} TL}" Width="120"/>
                <DataGridTextColumn Header="Stok" Binding="{Binding StockQuantity}" Width="80"/>
                <DataGridTextColumn Header="Güç (kW)" Binding="{Binding PowerOutput, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="Üretici" Binding="{Binding Manufacturer}" Width="150"/>
                <DataGridTemplateColumn Header="İşlemler" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Düzenle" Margin="0,0,5,0" Click="BtnEdit_Click"/>
                                <Button Content="Sil" Click="BtnDelete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window> 